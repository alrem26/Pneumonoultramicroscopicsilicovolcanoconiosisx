<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.myfirstapp.WriteAComment">

    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/comme"
        android:singleLine="false"
        android:hint="Write a reaction."
        android:lines="3"
        android:layout_below="@+id/nameuser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a Picture"
        android:background="@color/bgColor"
        android:textColor="#fff"
        android:drawableLeft="@drawable/cameraone"
        android:id="@+id/camerabutton"
        android:padding="10dp"
        android:layout_below="@+id/comme"
        android:layout_alignParentLeft="true" />



    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/camerabutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Feedback"
        android:background="@color/bgColor"
        android:textColor="#fff"
        android:padding="20dp"
        android:id="@+id/feed"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/comme" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/nameuser"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/comme" />

</RelativeLayout>
