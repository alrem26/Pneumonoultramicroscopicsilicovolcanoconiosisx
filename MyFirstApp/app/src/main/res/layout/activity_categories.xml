<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mycompany.myfirstapp.Categories"
    android:background="#fff">

    <Button
        android:drawableTop="@drawable/education"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="EDUCATION"
        android:textColor="#fff"

        android:id="@+id/education"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="58dp" />

    <Button
        android:drawableTop="@drawable/copyeconomy"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="ECONOMY"
        android:textColor="#fff"
        android:id="@+id/economy"
        android:layout_alignTop="@+id/education"
        android:layout_alignParentRight="true" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/funds"
        android:layout_below="@+id/education"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="27dp" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/funds"
        android:layout_alignParentRight="true" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/button3"
        android:layout_below="@+id/funds"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button2" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:drawableTop="@drawable/funds"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="@drawable/buttons"
        android:text="FUNDS"
        android:textColor="#fff"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
